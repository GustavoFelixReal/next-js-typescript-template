{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "jsx": "preserve",
    "jsxImportSource": "react",
    "resolveJsonModule": true,
    "module": "esnext",
    "rootDir": "./",
    "baseUrl": "./",
    "noEmit": true,
    "allowJs": true,
    "paths": {
      "src/*": [
        "src/*"
      ],
    },
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "incremental": true,
    "isolatedModules": true
  },
  "include": [
    "*.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
  ],
  "exclude": [
    "node_modules",
    "public"
  ]
}